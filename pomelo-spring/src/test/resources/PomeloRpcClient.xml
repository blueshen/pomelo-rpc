<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:pomelorpc="http://www.shenyanchao.cn/pomelorpc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.shenyanchao.cn/pomelorpc
        http://www.shenyanchao.cn/pomelorpc/pomelorpc.xsd">

    <!--zk 注册中心地址  -->
    <pomelorpc:application id="rpcRegistryApplicationClient" address="127.0.0.1:2181" flag="2" timeout="2000"/>

    <!--group 可以同时支持多组，以符合,隔开  -->
    <pomelorpc:reference id="demoServiceClient" interfaceName="cn.shenyanchao.pomelo.rpc.demo.service.IDemoService"
                         protocolType="1" codecType="4" timeout="2000" group="demo"/>

</beans>