<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:pomelohttp="http://www.shenyanchao.cn/pomelohttp"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.shenyanchao.cn/pomelohttp http://www.shenyanchao.cn/pomelorpc/pomelohttp.xsd">

    <pomelohttp:registry id="rpcRegistry" port="10009" timeout="500"/>
    <pomelohttp:service id="IDemoService" projectName="Demo" ref="demoService" httpType="POST" returnType="html"/>
    <pomelohttp:service id="IDemoServiceget" projectName="DemoGET" ref="demoService" httpType="GET" returnType="html"/>

    <bean id="demoService" class="cn.shenyanchao.pomelo.rpc.demo.service.impl.DemoServiceImpl"></bean>
</beans>